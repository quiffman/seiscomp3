# All rights reserved.
#
# $Id: libgcf2-config.src.in,v 1.1 2003/05/29 12:16:15 root Exp $
#
# $Log: libgcf2-config.src.in,v $
# Revision 1.1  2003/05/29 12:16:15  root
# *** empty log message ***
#
# Revision 1.1  2003/05/16 10:36:27  root
# *** empty log message ***
#
# Revision 1.1  2003/04/01 17:52:09  root
# #
#
#

prefix=/usr/local
exec_prefix=${prefix}
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: libgcf2-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo 2.3.3-E
      exit 0
      ;;
    --cflags)
      if test "${prefix}/include" != /usr/include ; then
        includes="-I${prefix}/include"
      fi
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	echo $includes
fi
if test "$echo_libs" = "yes"; then
	echo -L${exec_prefix}/lib -lgcf2
fi
